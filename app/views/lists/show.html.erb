<%= render "shared/banner-list", list: @list %>
<section class="py-5 bookmarks">
  <div class="container">
    <% if @list.movies.empty? %>
      <p>Cette liste est vide. Vous pouvez ajouter des films</p>
    <% else %>
      <div class="row">
        <% @list.movies.each do |movie| %>
          <%= render 'bookmarks/partial/bookmark-card', movie: movie  %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
<section class="add-bookmarks">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="block-form">
        <h2>Ajouter un film</h2>
        <%= render 'shared/form', list: @list, bookmark: @bookmark %>
      </div>
    </div>
  </div>
</section>
